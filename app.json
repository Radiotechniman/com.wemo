{
  "id": "com.wemo",
  "version": "1.0.0",
  "compatibility": "0.x || 1.x",
  "category": "appliances",
  "name": {
    "en": "Belkin WeMo",
    "nl": "Belkin WeMo"
  },
  "description": {
    "en": "Connect your WeMo switches and sensors with Homey",
    "nl": "Verbind je WeMo schakelaars en sensoren met Homey"
  },
  "author": {
    "name": "Freek Boelders",
    "website": "http://www.freekboelders.nl"
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "drivers": [
    {
      "id": "socket",
      "name": {
        "en": "Belkin WeMo socket"
      },
      "images": {
        "large": "./drivers/socket/assets/images/large.jpg",
        "small": "./drivers/socket/assets/images/small.jpg"
      },
      "class": "socket",
      "capabilities": [ "onoff" ],
      "pair": [
        {
          "id": "search"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_stations"
          }
        },
        {
          "id": "add_stations",
          "template": "add_devices"
        }
      ]
    },
    {
      "id": "sensor",
      "name": {
        "en": "Belkin WeMo motion sensor"
      },
      "images": {
        "large": "./drivers/sensor/assets/images/large.jpg",
        "small": "./drivers/sensor/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": [ "alarm_motion" ],
      "pair": [
        {
          "id": "search"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_stations"
          }
        },
        {
          "id": "add_stations",
          "template": "add_devices"
        }
      ]
    }
  ],
  "dependencies": {
    "node-ssdp": "*",
    "wemo": "*",
    "request": "*",
    "extend": "*"
  },
  "permissions": [
    "homey:manager:speech-output",
    "homey:manager:speech-input"
  ],
  "speech": [
  ]
}